{% extends 'base.html.twig' %}

{% block title %}Finderr | Messenger
{% endblock %}

{% block body %}
    <section class="d-flex justify-content-center align-items-center py-2 border-top border-bottom mb-2">
                <h2>Reception box</h2>
    </section>
    <section class="container">
        <div class="row">
            <div class="col-12">
                <h1>Messages</h1>
                <p>
                    {{ app.user.received|length }}
                    messages received</p>
            </div>

            {% for message in app.user.received %}
                {% if message.isRead == 0 %}
                    {% set bold = "fw-bold" %}
                {% else %}
                    {% set bold = "" %}
                {% endif %}
        <div class="row border-bottom p-3">
            <div class="col">
                <img src="uploads/60dadf0a82058.jpg" class="sender-pic m-0 p-0" alt"{{ message.sender.lastname }}" width="200px">
            </div>
            <div class="col {{ bold }} p-0">
                <div>{{ message.sender.lastname }}</div>
                <div class="text-secondary {{ bold }}"> {{ message.createdAt|date('d M') }}</div>
                <div><a href="{{ path("read", {id: message.id}) }}"></div>
                    {{ message.title }}</a>
            </div>
            <div class="col-1">
                    <a href="{{ path("delete", {id: message.id}) }}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-square-fill text-danger" viewbox="0 0 16 16">
                            <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm3.354 4.646L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 1 1 .708-.708z"/>
                        </svg>
                    </a>
            </div>
        </div>
            {% endfor %}
    </section>
    <section class= "py-3 my-3">
        <div class="col">
            <a class="btn btn-primary col-4 offset-1" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">All folders</a>
            <a href="{{ path("send") }}" class="btn btn-success col-4 offset-1">Send a message</a>
        </div>
    </section>
    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header">
            <h2 class="offcanvas-title" id="offcanvasExampleLabel">My folders</h2>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div class="list-group">
                <a href="{{ path("messages") }}" class="mt-2 list-group-item list-group-item-action">Home</a>
            </div>
            <div class="list-group">
                <a href="{{ path("received") }}" class="mt-2 list-group-item list-group-item-action active">Reception box</a>
            </div>
            <div class="list-group">
                <a href="{{ path("sent") }}" class="mt-2 list-group-item list-group-item-action">Send messages</a>
            </div>
        </div>
    </div>

    <section>
    </section>

    <footer class="bg-light d-flex flex-row align-items-center justify-content-evenly text-center p-4">
        <a href="{{ path('home') }}"><svg xmlns="http://www.w3.org/2000/svg"
        width="30"
        height="30"
        fill="currentColor"
        class="bi bi-search"
        viewBox="0 0 16 16">
        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
        </svg></a>
        <a href="{{ path('user_index') }}"><svg xmlns="http://www.w3.org/2000/svg"
        width="30"
        height="30"
        fill="currentColor"
        class="bi bi-people-fill"
        viewBox="0 0 16 16">
        <path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
        <path fill-rule="evenodd"
            d="M5.216 14A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1h4.216z" />
        <path d="M4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5z" />
        </svg></a>
  </footer>


{# 

